<odoo>
<record id="pos_config_custom_inherit_view_form" model="ir.ui.view">
        <field name="name">pos.config.form.view.inherited</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="pos_interface_section" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="pos_invoice_number"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="pos_invoice_number"/>
                            <div class="text-muted">
                                Show Invoice Number On POS Receipt
                            </div>
                        </div>
                </div>
            </div>
        </field>
    </record>
</odoo>